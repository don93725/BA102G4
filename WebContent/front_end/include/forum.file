<!-- 討論區專用js -->
<script>
	$(function(){
		$("div.f_item").hover(
			function(){
				$(this)
				.fadeTo("fast",1)
				.addClass("b");
			},function(){
				$(this)
				.fadeTo("fast",0.8)
				.removeClass("b");
			}
		);		
	});
</script>